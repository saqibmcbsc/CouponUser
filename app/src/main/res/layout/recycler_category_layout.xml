<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/const_category"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/cat_background"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        app:layout_constraintEnd_toEndOf="parent">


       <ImageView
           android:id="@+id/img_category"
           android:layout_width="@dimen/_30sdp"
           android:layout_height="@dimen/_30sdp"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           android:src="@drawable/cat_icon"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/text_cetogory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/const_category"
        app:layout_constraintEnd_toEndOf="@+id/const_category"
        app:layout_constraintTop_toBottomOf="@+id/const_category"
        android:layout_marginTop="@dimen/_4sdp"
        android:text="Fashion"
        android:fontFamily="@font/dmsens_medium"
        android:textSize="@dimen/_10sdp"
        android:textColor="@color/black"
        />

</androidx.constraintlayout.widget.ConstraintLayout>