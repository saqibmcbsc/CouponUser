<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/_175sdp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/store_product_bg"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp">

        <ImageView
            android:id="@+id/img_product"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_16sdp"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/amazon_icon"/>

        <TextView
            android:id="@+id/text_brand_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_product"
            android:layout_marginTop="@dimen/_4sdp"
            android:text="Nike Shoes - Men"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_18sdp"
            app:layout_constraintEnd_toEndOf="parent"
            android:maxLines="1"
            android:maxLength="20"/>

        <TextView
            android:id="@+id/text_productDes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/text_brand_name"
            app:layout_constraintTop_toBottomOf="@+id/text_brand_name"
            app:layout_constraintEnd_toEndOf="@+id/text_brand_name"
            android:textColor="#CCCCCC"
            android:text="Your subscription has been placed.Weâ€™ll send you an email with your order details."
            android:textSize="@dimen/_9sdp"
            android:maxLines="3"/>

            <TextView
                android:id="@+id/text_rupees"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/text_productDes"
                app:layout_constraintTop_toBottomOf="@+id/text_productDes"
                android:text="\u20b9"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginTop="@dimen/_4sdp"/>

        <TextView
            android:id="@+id/text_productPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/text_rupees"
            app:layout_constraintTop_toBottomOf="@+id/text_productDes"
            android:text="2999"
            android:textSize="@dimen/_10sdp"
            android:maxLength="7"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_4sdp" />

        <TextView
            android:id="@+id/text_productPriceDepricate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/text_productPrice"
            app:layout_constraintTop_toBottomOf="@+id/text_productDes"
            android:text="3690"
            android:textSize="12sp"
            android:textColor="#9A0000"
            android:maxLength="7"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:foreground="@drawable/text_strike" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>